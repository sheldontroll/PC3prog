@model Publicacion
<h1> Nueva Publicacion</h1>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="NombreProducto"></label>
        <input asp-for="NombreProducto" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select asp-for="CategoriaId" asp-items="ViewBag.Categorias" type="text" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="DescripcionPubli"></label>
        <input asp-for="DescripcionPubli" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="LugarCompra"></label>
        <input asp-for="LugarCompra" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Foto"></label>
        <input asp-for="Foto" type="text" class="form-control">
    </div>
    <button class="btn btn-primary">Registrar</button>
</form>